---
import Base from "../../layouts/Base.astro";

const projects = [
  {
    title: "The Monk Who Sold His Ferrari",
    year: "Jan 2025",
    author: "Robin Sharma",
    url: "https://www.goodreads.com/book/show/43877.The_Monk_Who_Sold_His_Ferrari",
  },
  {
    title: "Men Without Women",
    year: "Mar 2025",
    author: "Haruki Murakami",
    url: "https://www.goodreads.com/book/show/33652490-men-without-women",
  },
  {
    title: "Ikigai",
    year: "Mar 2025",
    author: "Hector Garcia and Francesc Miralles",
    url: "https://www.goodreads.com/en/book/show/124950497",
  },
  {
    title: "Lords Of The Deccan",
    year: "Apr 2025",
    author: "Anirudh Kanisetti",
    url: "https://www.goodreads.com/book/show/60051983-lords-of-the-deccan",
  },
];

const title = "Books";
const description = "My Books";
---

<Base title={title} description={description}>
  <section>
    <h1 class="mb-8 text-2xl font-medium tracking-tight">Books I read</h1>
    <div class="space-y-6">
      {
        projects.map((project, index) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="block group hover:opacity-80 transition-opacity duration-200">
            <div class="flex flex-col">
              <div class="w-full flex justify-between items-baseline">
                <span class="text-black dark:text-white font-semibold tracking-tight">
                  {project.title}
                </span>
                <span class="text-neutral-600 dark:text-neutral-400 tabular-nums text-sm">
                  {project.year}
                </span>
              </div>
              <p class="prose prose-neutral dark:prose-invert">
                {project.author}
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</Base>
